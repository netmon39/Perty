<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.teamperty.netipol.perty.Home.MainActivity"
    android:background="@drawable/gradient1_nocorner"
    >
    <TextView
        android:id="@+id/tiFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/textPrimary"
        android:background="@android:color/transparent"
        android:fontFamily="@font/dosisbold"
        android:textSize="64dp"
        android:layout_above="@+id/tiSlogan"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/tiSlogan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;Where parties started.&quot;"
        android:textSize="18sp"
        android:textStyle="italic"
        android:textColor="@color/textPrimary"
        android:layout_centerInParent="true" />

