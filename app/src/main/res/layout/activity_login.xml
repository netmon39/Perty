<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.netipol.perty.Home.MainActivity"
    android:background="@drawable/apptibg2"
    >

    <TextView
        android:id="@+id/tiFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="@color/textPrimary"
        android:background="@android:color/transparent"
        android:fontFamily="@font/dosisbold"
        android:textSize="64dp"
        android:layout_marginBottom="24dp"
        android:layout_marginTop="200dp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap anywhere to login with Facebook."
        android:textSize="14dp"
        android:textColor="@color/textPrimary"
        android:layout_below="@+id/tiFirst"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/facebookBtn"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>

</RelativeLayout>