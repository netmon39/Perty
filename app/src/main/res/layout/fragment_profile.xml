<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Profile.ProfileFragment"
    android:orientation="vertical"
    android:background="@color/bgPrimary"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <ImageView
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/my_profile_picture"
        />

        <TextView
            android:layout_margin="8dp"
          android:id="@+id/my_username_profile"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:textSize="30sp"
          android:layout_marginTop="20dp"
          android:textStyle="bold"
          android:layout_toEndOf="@id/my_profile_picture"
          />

        <TextView
            android:id="@+id/my_type_profile"
            android:layout_marginStart="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/my_profile_picture"
            android:layout_below="@id/my_username_profile"
             />

        <TextView
            android:id="@+id/my_desc_profile"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/my_type_profile"
            android:layout_toEndOf="@id/my_profile_picture"
            />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_margin="12dp"
            android:paddingHorizontal="8dp"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="12sp"
            android:text="Log Out" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/profile_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       />

</LinearLayout>
