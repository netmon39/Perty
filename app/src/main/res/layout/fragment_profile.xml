<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Profile.ProfileFragment"
    android:background="@android:color/white"
    android:orientation="vertical"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/my_profile_picture"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_toRightOf="@+id/my_profile_picture"
            android:paddingTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="001"
                android:textSize="20dp"
                android:id="@+id/host_count"
                android:textAlignment="center"
                android:layout_marginLeft="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="002"
                android:textSize="20dp"
                android:id="@+id/join_count"
                android:textAlignment="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_toRightOf="@+id/host_count"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="003"
                android:textSize="20dp"
                android:textAlignment="center"
                android:id="@+id/friend_count"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_toRightOf="@+id/join_count"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Host"
                android:textSize="16dp"
                android:textAlignment="center"
                android:id="@+id/host_count_txt"
                android:layout_below="@id/host_count"
                android:layout_alignRight="@id/host_count"
                android:layout_alignLeft="@id/host_count"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Join"
                android:textSize="16dp"
                android:textAlignment="center"
                android:id="@+id/join_count_txt"
                android:layout_below="@id/host_count"
                android:layout_alignRight="@id/join_count"
                android:layout_alignLeft="@id/join_count"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friend"
                android:textSize="16dp"
                android:textAlignment="center"
                android:id="@+id/friend_count_txt"
                android:layout_below="@id/host_count"
                android:layout_alignRight="@id/friend_count"
                android:layout_alignLeft="@id/friend_count"
                />


            <TextView
                android:id="@+id/my_username_profile"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/host_count"
                android:layout_alignRight="@id/friend_count"
                android:layout_below="@+id/host_count_txt"
                android:layout_marginTop="5dp"
                android:textAlignment="textStart"
                android:text="netmon39"
                android:textSize="20dp"
                android:textStyle="bold"
                android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/my_type_profile"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Student"
            android:layout_toRightOf="@id/my_username_profile"
            android:layout_below="@id/host_count_txt"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:textSize="16dp"
            />

        <Button
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textSize="12dp"
            android:text="Log Out"
            android:layout_alignParentEnd="true"
            android:layout_toRightOf="@+id/friend_count"
            />
        </RelativeLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/my_desc_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/my_profile_picture"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        />

    <android.support.design.widget.TabLayout
        android:id="@+id/profile_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        android:background="@color/bgPrimary"
        app:tabSelectedTextColor="@color/colorPrimary"
        app:tabIndicatorColor="@color/colorPrimary"
        />

    <android.support.v4.view.ViewPager
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</LinearLayout>