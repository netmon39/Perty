<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:padding="10dp" >

    <TextView
        android:id="@+id/report_txt1_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Why are you reporting this user?"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Spinner
        android:id="@+id/report_type_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userTypeTitle"
        android:layout_marginBottom="16dp"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/report_txt2_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please explain your reason(s)."
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/report_extra_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine">

        <requestFocus />
    </EditText>
</LinearLayout>